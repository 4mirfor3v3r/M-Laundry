<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.AccountFragment">

    <ScrollView
        android:scrollIndicators="none"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    <androidx.cardview.widget.CardView
        android:id="@+id/account_card_1"
        app:cardElevation="3dp"
        app:cardCornerRadius="30dp"
        android:layout_marginTop="-56dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <LinearLayout
            android:orientation="vertical"
            android:paddingTop="56dp"
            android:paddingBottom="24dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <TextView
                android:id="@+id/account_label_title"
                android:layout_marginTop="4dp"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginLeft="24dp"
                android:text="Account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.github.florent37.materialtextfield.MaterialTextField
                android:layout_below="@id/account_label_title"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mtf_openKeyboardOnFocus="true"
                app:mtf_labelColor="@android:color/black">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColorHint="@android:color/black"
                    android:hint="Name"
                    android:textColor="@android:color/black" />
            </com.github.florent37.materialtextfield.MaterialTextField>
            <com.github.florent37.materialtextfield.MaterialTextField
                android:layout_below="@id/account_label_title"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mtf_openKeyboardOnFocus="true"
                app:mtf_labelColor="@android:color/black">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColorHint="@android:color/black"
                    android:hint="Name"
                    android:textColor="@android:color/black" />
            </com.github.florent37.materialtextfield.MaterialTextField>
            <com.github.florent37.materialtextfield.MaterialTextField
                android:layout_below="@id/account_label_title"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mtf_openKeyboardOnFocus="true"
                app:mtf_labelColor="@android:color/black">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColorHint="@android:color/black"
                    android:hint="Name"
                    android:textColor="@android:color/black" />
            </com.github.florent37.materialtextfield.MaterialTextField>
            <com.github.florent37.materialtextfield.MaterialTextField
                android:layout_below="@id/account_label_title"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mtf_openKeyboardOnFocus="true"
                app:mtf_labelColor="@android:color/black">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColorHint="@android:color/black"
                    android:hint="Name"
                    android:textColor="@android:color/black" />
            </com.github.florent37.materialtextfield.MaterialTextField>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_below="@id/account_card_1"
        android:id="@+id/account_edit"
        android:src="@drawable/ic_edit"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_marginTop="-30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <androidx.cardview.widget.CardView
        android:layout_below="@id/account_card_1"
        android:id="@+id/account_card_2"
        app:cardElevation="2dp"
        android:layout_marginTop="-30dp"
        app:cardCornerRadius="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <LinearLayout
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:paddingLeft="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <TextView
                android:text="Setting"
                android:layout_marginTop="24dp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_marginLeft="12dp"
                android:textSize="24sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/account_rewards"
                android:text="My Rewards"
                android:padding="12dp"
                android:layout_marginTop="12dp"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/account_help"
                android:text="Help"
                android:padding="12dp"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/account_rate"
                android:text="Rate our App"
                android:padding="12dp"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/account_feedback"
                android:text="Feedback"
                android:padding="12dp"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/account_logout"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_centerHorizontal="true"
        android:textColor="#8B0606"
        android:textSize="24sp"
        android:text="Logout."
        android:layout_below="@id/account_card_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </RelativeLayout>
    </ScrollView>



</RelativeLayout>